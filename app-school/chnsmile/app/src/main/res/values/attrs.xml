<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleView">
        <attr name="backButtonName" format="string|reference" />
        <attr name="backButtonColor" format="color|reference" />
        <attr name="backButtonSize" format="dimension|reference" />

        <attr name="titleName" format="string|reference" />
        <attr name="titleColor" format="color|reference" />
        <attr name="titleSize" format="dimension|reference" />

        <attr name="enableBack" format="boolean|reference" />

        <attr name="rightText" format="string|reference" />
        <attr name="rightTextColor" format="color|reference" />
        <attr name="rightTextSize" format="dimension|reference" />

        <attr name="rightImg" format="reference" />

        <attr name="dividerColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="viewOutLineStrategy">
        <attr name="clip_radius" format="dimension"></attr>
        <attr name="clip_side" format="enum">
            <enum name="all" value="0"></enum>
            <enum name="left" value="1"></enum>
            <enum name="top" value="2"></enum>
            <enum name="right" value="3"></enum>
            <enum name="bottom" value="4"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="UXUICheckBox">
        <!-- 是否开启动画 -->
        <attr name="uxui_check_box_anim_enable" format="boolean" />
        <!-- unable状态,优先于checked的状态判断 -->
        <attr name="uxui_check_box_state_enable" format="boolean" />
        <!-- 未选中情况的背景颜色，等同于enable状态下 -->
        <attr name="uxui_check_box_state_checked" format="boolean" />
        <!-- checked状态下的背景 -->
        <attr name="uxui_check_box_checked_drawable" format="reference" />
        <!-- normal状态下的背景 -->
        <attr name="uxui_check_box_normal_drawable" format="reference" />
        <!-- unable状态下的背景 -->
        <attr name="uxui_check_box_unable_drawable" format="reference" />
    </declare-styleable>
</resources>